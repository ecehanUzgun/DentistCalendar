@model SecretaryViewModel
@{
    ViewData["Title"] = "Secretary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Modal -->
<div class="modal fade" id="saveModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Randevu Ekleme / Güncelleme</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Başlangıç Tarihi: </label>
                            <input id="inputStartDate" type="text" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Bitiş Tarihi: </label>
                            <input id="inputEndDate" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Hasta Ad: </label>
                            <input id="inputPatientName" type="text" class="form-control" />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Hasta Soyad: </label>
                            <input id="inputPatientSurname" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Açıklama: </label>
                            <input id="inputDescription" type="text" class="form-control" />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-control-label">Diş Hekimi: </label>
                            <select id="inputDentistId" class="form-control" asp-items="@Model.DentistsSelectList"></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            @* <img src="..." class="card-img-top" alt="..."> *@
            <div class="card-body">
                <h5 class="card-title">Diş Hastanesi</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.User.Name @Model.User.Surname</h6>
                <p class="card-text">Diş hastanesi randevu sistemine hoş geldiniz.</p>
                <a asp-action="Logout" asp-controller="Account" class="card-link">Çıkış Yap</a>
            </div>
        </div>
        <br />
        <ul class="list-group">
            @foreach (var item in Model.Dentists)
            {
                <li class="list-group-item">Dt. @item.Name @item.Surname <button class="btn btn-sm pull-right" style="background-color:red"></button></li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <div id="calendar">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            var calendarEl = document.getElementById('calendar');

            var selectedEvent = null;

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                timeZone: 'local',
                themeSystem: 'bootstrap',

                bootstrapFontAwesome: {
                    dayGridMonth: 'calendar',
                    prev: 'fa-chevron-circle-left',
                    next: 'fa-chevron-circle-right',
                    listWeek: 'fa-list'
                },

                locale: 'tr',

                headerToolbar: {
                    left: 'prev,next today addEvent',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                },

                customButtons: {
                    addEvent: {
                        text: 'Ekle',
                        click: function () {
                            var newEvent = {
                                id: 'a',
                                title: 'New Event',
                                start: '2024-12-15T08:00:00.000Z',
                                end: '2024-12-15T10:00:00.000Z'
                            }

                            calendar.addEvent(newEvent);
                        }
                    }
                },

                eventTimeFormat: {
                    hour: '2-digit',
                    minute: '2-digit',
                },

                footer: {
                    left: 'prevYear',
                    right: 'NextYear'
                },

                slotLabelFormat: {
                    hour: '2-digit',
                    minute: '2-digit',
                },

                fixedWeekCount: true,
                showNonCurrentDates: false,

                allDaySlot: false,
                firstDay: 1,
                buttonText: {
                    today: 'Bugün',
                    month: 'Ay',
                    week: 'Hafta',
                    day: 'Gün',
                    list: 'Liste'
                },

                events: [],

                selectable: true,
                // droppable: true,
                select: function (selectionInfo) {
                    console.log(selectionInfo);

                    selectedEvent = {
                        id: 0,
                        start: selectionInfo.start,
                        end: selectionInfo.end,
                        patientName: "",
                        patientSurname: "",
                        description: "",
                        dentistId: 0
                    }

                    openAddOrUpdateModal();
                },
                eventClick: function (info) {
                    alert(info.event.title);
                },

                editable: true
            });

            calendar.render();

            function openAddOrUpdateModal() {
                if(selectedEvent != null)
                {
                    $('#inputStartDate').val(selectedEvent.start);
                    $('#inputEndDate').val(selectedEvent.end);
                    $('#inputPatientName').val(selectedEvent.patientName);
                    $('#inputPatientSurname').val(selectedEvent.patientSurname);
                    $('#inputDescription').val(selectedEvent.description);
                    $('#selectDentistId').val(selectedEvent.dentistId);
                }

                // $('#saveModal').modal(); //jquery
                var saveModal = new bootstrap.Modal(document.getElementById('saveModal'));
                saveModal.show();
            }
        });
    </script>
}